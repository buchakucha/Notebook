<% form({ method: :get },{ obj: @parameters }) do |f| %>
<div class="large-12 cell">
    <div class="large-12 cell">
      <%= f.input(:birthday, type: :date, label: 'Выберите дату для поиска ближайших Дней рождений')%>
      <%= f.button(value: 'Найти', class: 'button secondary') %>
    </div>
 <% if @notes_search.size > 0 %>
<table>
      <thead>
        <tr style="color:#000000; font-family: 'Caveat', cursive">
          <th>Фамилия</th>
          <th>Имя</th>
          <th>День рождения</th>
          <th>Доп. информация</th>
        </tr>
      </thead>
      <tbody>
       <% @notes_search.each do |note| %>
          <tr>
            <td><%= note.surname %></td>
            <td><%= note.name %></td>
            <td><%= note.birthday %></td>
            <td><a href="<%= path(note) %>">Подробнее</a></td>
          </tr>
        <% end %>
      </tbody>
      </table>
    <% end %>
  </div>
</div>
<% end %>