<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:cellphone, type: :text, label: 'Сотовый телефон', placeholder: '8-888-888-88-88')%>
    </div>
    <div class="large-12 cell">
      <%= f.input(:homephone, type: :text, label: 'Домашний телефон', placeholder: '555555')%>
    </div>
    <div class="large-12 cell">
      <%= f.input(:address, type: :text, label: 'Адрес', placeholder: 'Ярославль, ул. Волкова, д. 1')%>
    </div>
    <div class="large-12 cell">
      <%= f.input(:status, type: :select, label: 'Статус', options: StatusType.all_types)%>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: 'Сохранить', class: 'button secondary') %>
      <a href="<%= path(@note) %>" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>